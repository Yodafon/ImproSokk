<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".HelyszinValaszto">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity"
            android:id="@+id/fragment_helyszin_valaszto">

        <CheckBox
                android:text="Ami volt azokat ne mutassa ujra"
                android:layout_width="115dp"
                android:layout_height="64dp" android:id="@+id/volt_mar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.726"/>
        <Button
                android:text="Uj helyszin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/uj_helyszin"
                app:layout_constraintTop_toBottomOf="@+id/helyszin"
                android:layout_marginTop="60dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
        <TextView
                android:text="@string/helyszin"
                android:layout_width="209dp"
                android:layout_height="49dp" android:id="@+id/helyszin"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/volt_mar" android:layout_marginTop="72dp"
                android:textSize="18sp" android:textStyle="bold" android:textColor="#000000"
                app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>